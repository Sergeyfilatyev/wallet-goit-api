    "/api/transactions": {
      "post": {
        "tags": ["Transactions"],
        "summary": "Create a new transaction",
        "parameters": [],
        "security": [
          {
            "Bearer": []
          }
        ],
        "requestBody": {
          "description": "Transaction's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["amount", "type"],
                "properties": {
                  "type": {
                    "type": "boolean",
                    "example": true
                  },
                  "category": {
                    "type": "string",
                    "example": "other expenses"
                  },
                  "comment": {
                    "type": "string",
                    "example": "Commentary transaction"
                  },
                  "amount": {
                    "type": "number",
                    "example": "100500"
                  }
