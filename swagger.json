              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "responses message",
                      "example": "Transaction successful created"
                    },
                    "data": {
                      "type": "object",
                      "description": "responses data",
                      "example": {
                        "category": "other expenses",
                        "amount": 100500,
                        "commment": "Commentary transaction",
                        "type": true
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
